{
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/backend/(.*)", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}
